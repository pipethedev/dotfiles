# Font configuration
font-family = JetBrainsMono Nerd Font
font-size = 14

# Theme - you can use 'catppuccin-mocha' or other built-in themes
theme = Moonfly

macos-titlebar-style = transparent

# Window configuration
window-padding-x = 10
window-padding-y = 10
background-opacity = 0.95

# Shell
command = /bin/zsh

# Keybindings
keybind = cmd+n=new_window
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface
keybind = ctrl+p=unbind

macos-option-as-alt = true
keybind = super+z=text:\x1b[27;5;122~
keybind = super+shift+z=text:\x1b[27;6;122~
keybind = super+p=text:\x1b[27;5;112~
keybind = super+s=text:\x1b[27;5;115~
keybind = super+b=text:\x1b[27;5;98~

keybind = shift+enter=text:\x1b\r

## settings

auto-update-channel = stable
copy-on-select = false
initial-window = false
window-padding-x = 5
window-padding-balance = true

cursor-style = block
cursor-style-blink = false

shell-integration = detect
